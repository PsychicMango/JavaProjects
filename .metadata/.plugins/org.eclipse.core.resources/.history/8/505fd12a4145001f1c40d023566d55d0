package Programa;

import java.util.Locale;
import java.util.Scanner;

import Entidade.Associado;

public class Programa {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner leitor = new Scanner(System.in);
		System.out.println("INFORME O NUMERO DA CONTA: ");
		int id = leitor.nextInt();
		System.out.println("INFORME O NOME DO DONO DA CONTA: ");
		String nome = leitor.nextLine();
		System.out.println("EXISTE UM VALOR INICIAL DE DEPÃ“SITO? (Y/N)");
		char opcao = leitor.next().charAt(0);
		if(opcao == 'Y' || opcao == 'y') {
			double deposito = leitor.nextDouble();
			Associado ass = new Associado(id, nome, deposito);
		}else {
			Associado ass = new Associado(id,nome);
		}
		System.out.println("DADOS DA CONTA: ");
		System.out.printf("Conta %i, Proprietario: %s, Saldo: $ %.2f",ass.getId(), ass.getNome(), ass.getSaldo());

	}

}
